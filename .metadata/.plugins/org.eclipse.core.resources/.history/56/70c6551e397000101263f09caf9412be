package com.example.demo.service;

import com.example.demo.model.DemoStudent;
import com.example.demo.repository.StudentRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;
import java.util.Optional;

@Service
public class StudentService {

    @Autowired
    private StudentRepository repository;

    public List<DemoStudent> getAllStudents() {
        return repository.findAll();
    }

    public DemoStudent createStudent(DemoStudent student) {
        return repository.save(student);
    }

    public Optional<Student> updateStudent(Long id, DemoStudent newData) {
        return repository.findById(id).map(existing -> {
            existing.setName(newData.getName());
            existing.setSurname(newData.getSurname());
            existing.setAge(newData.getAge());
            return repository.save(existing);
        });
    }

    public void deleteStudent(Long id) {
        repository.deleteById(id);
    }
}
